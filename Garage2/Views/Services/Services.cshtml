@model CarUserViewModel

@{
    ViewData["Title"] = "Services";
}

<div class="container">
    <div class="row">
        <div class="col p-0">
            <h3>All Users</h3>
        </div>
        <div class="col-3 p-0">
            <form method="get">
                <div class="input-group">
                    <input class="form-control" name="searchTerm">
                    <div class="input-group-append">
                        <button class="btn btn-outline-primary" type="submit">Search</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
<br />


<div class="">
    @if (Model.AppUsersEnumerable != null)
    {
        <table class="table table-hover" onclick="this.form.submit()">
            <thead>
                <tr>
                    <th scope="col">Id</th>
                    <th scope="col">First Name</th>
                    <th scope="col">Last Name</th>
                    <th scope="col">Phone Number</th>
                    <th scope="col">Actions</th>
                </tr>
            </thead>
            <tbody data-toggle="collapse" data-target="#demo1">
                @foreach (var user in Model.AppUsersEnumerable)
                {
                    <tr>
                        <td>@user.Id</td>
                        <td>@user.UserName</td>
                        <td>@user.LastName</td>
                        <td>@user.PhoneNumber</td>
                        <td><a class="btn btn-outline-primary" asp-controller="Services" asp-action="UserCars" asp-route-id="@user.Id" role="button">Show Cars</a></td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>There is no Users. Please create one first</p>
    }
</div>











